    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serverpod Debug",
            "request": "launch",
            "type": "dart",
            "program": "bin/main.dart",
            "args": [
                "--mode", "development",
                "--apply-migrations"
            ],
            "env": {
                "PATH": "/Users/jonathanlemaine/Documents/flutter/bin:${env:PATH}"
            },
            "cwd": "${workspaceFolder}",
            // Options importantes pour le debug
            "console": "terminal",
            "enableAsserts": true,
            "pauseIsolatesOnStart": false,
            "pauseIsolatesOnExit": false,
            "vmServiceLogFile": "${workspaceFolder}/vm_service.log"
        },
        {
            "name": "Serverpod Debug (no migrations)",
            "request": "launch",
            "type": "dart",
            "program": "bin/main.dart",
            "args": ["--mode", "development"],
            "env": {
                "PATH": "/Users/jonathanlemaine/Documents/flutter/bin:${env:PATH}"
            },
            "cwd": "${workspaceFolder}",
            "console": "terminal",
            "enableAsserts": true,
            "pauseIsolatesOnStart": false,
            "pauseIsolatesOnExit": false
        }
    ]
}